BasedOnStyle: LLVM
Language: Cpp

# Отступы
IndentWidth: 4                            # 4 пробела на уровень вложенности
TabWidth: 4                               # ширина таба (если вдруг встретится)
UseTab: Never                             # только пробелы, никаких табов
ContinuationIndentWidth: 4               # отступ переноса строки

# Фигурные скобки
BreakBeforeBraces: Linux                  # { на той же строке для if/for/while, на новой для функций
InsertBraces: true                        # обязательные {} для if/else/for/while даже с одной строкой тела

# Пробелы
SpaceBeforeParens: ControlStatements      # пробел перед ( только у if/for/while/switch, не у функций
SpaceInEmptyBlock: false                  # {} без пробела внутри
SpaceAfterCStyleCast: true               # пробел после каста: (uint8_t) x
SpacesInParens: Never                     # без пробелов внутри скобок: f(x), не f( x )
SpaceBeforeSquareBrackets: false          # без пробела перед []: arr[i], не arr [i]
SpaceAroundPointerQualifiers: Default     # не трогать const/volatile у указателей
PointerAlignment: Middle                  # пробел с обеих сторон звёздочки: uint8_t * ptr

# Длина строки
ColumnLimit: 0                            # не ограничивать длину строки

# Выравнивание — без выравнивания по столбцам
AlignConsecutiveAssignments: None         # не выравнивать = в соседних строках
AlignConsecutiveDeclarations: None        # не выравнивать имена переменных в соседних строках
AlignTrailingComments:
  Kind: Never                             # не выравнивать // комментарии в конце строк

# Порядок #include
SortIncludes: Never                       # не переставлять #include местами
IncludeBlocks: Preserve                   # сохранять группы #include как есть

# Короткие конструкции
AllowShortBlocksOnASingleLine: Empty      # только пустые {} можно на одной строке
AllowShortIfStatementsOnASingleLine: Never # тело if всегда на новой строке
AllowShortFunctionsOnASingleLine: Empty   # только пустые функции {} на одной строке
AllowShortLoopsOnASingleLine: false       # тело for/while всегда на новой строке

# Инициализаторы структур
Cpp11BracedListStyle: false               # пробелы внутри {}: { .pin = 3 }, не {.pin=3}

# Штрафы за переносы
PenaltyReturnTypeOnItsOwnLine: 1000       # не выносить тип возврата функции на отдельную строку
